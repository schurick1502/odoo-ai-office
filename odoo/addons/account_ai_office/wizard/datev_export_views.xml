<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_datev_export_form" model="ir.ui.view">
        <field name="name">account.ai.datev.export.form</field>
        <field name="model">account.ai.datev.export</field>
        <field name="arch" type="xml">
            <form string="DATEV Export">
                <group>
                    <field name="period_from"/>
                    <field name="period_to"/>
                    <field name="export_format"/>
                    <field name="include_exported"/>
                    <field name="case_count" invisible="case_count == 0"/>
                </group>
                <footer>
                    <button name="action_preview" type="object"
                        string="Preview" class="btn-secondary"/>
                    <button name="action_export" type="object"
                        string="Export" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_datev_export" model="ir.actions.act_window">
        <field name="name">DATEV Export</field>
        <field name="res_model">account.ai.datev.export</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
