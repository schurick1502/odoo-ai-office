<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_ai_policy_tree" model="ir.ui.view">
        <field name="name">account.ai.policy.tree</field>
        <field name="model">account.ai.policy</field>
        <field name="arch" type="xml">
            <tree string="AI Policies">
                <field name="name"/>
                <field name="scope"/>
                <field name="key"/>
                <field name="version"/>
                <field name="is_active"/>
                <field name="active_from"/>
                <field name="active_to"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ai_policy_form" model="ir.ui.view">
        <field name="name">account.ai.policy.form</field>
        <field name="model">account.ai.policy</field>
        <field name="arch" type="xml">
            <form string="AI Policy">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Policy Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="scope"/>
                            <field name="key"/>
                            <field name="version"/>
                        </group>
                        <group>
                            <field name="is_active"/>
                            <field name="active_from"/>
                            <field name="active_to"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <separator string="Rules (JSON)"/>
                    <field name="rules_json"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ai_policy" model="ir.actions.act_window">
        <field name="name">Policies</field>
        <field name="res_model">account.ai.policy</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No policies defined yet.
            </p>
            <p>
                Create policies to control AI behavior thresholds and rules.
            </p>
        </field>
    </record>
</odoo>
