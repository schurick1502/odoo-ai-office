<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_ai_audit_log_tree" model="ir.ui.view">
        <field name="name">account.ai.audit_log.tree</field>
        <field name="model">account.ai.audit_log</field>
        <field name="arch" type="xml">
            <list string="AI Audit Logs" create="0" delete="0">
                <header>
                    <button name="%(action_audit_log_export)d" type="action"
                        string="Export" class="btn-secondary"
                        groups="account_ai_office.ai_office_approver"/>
                </header>
                <field name="create_date" string="Date"/>
                <field name="case_id"/>
                <field name="actor_type"/>
                <field name="actor"/>
                <field name="action"/>
                <field name="request_id"/>
            </list>
        </field>
    </record>

    <!-- Form View (read-only) -->
    <record id="view_ai_audit_log_form" model="ir.ui.view">
        <field name="name">account.ai.audit_log.form</field>
        <field name="model">account.ai.audit_log</field>
        <field name="arch" type="xml">
            <form string="AI Audit Log" create="0" delete="0" edit="0">
                <sheet>
                    <group>
                        <group>
                            <field name="case_id"/>
                            <field name="actor_type"/>
                            <field name="actor"/>
                            <field name="action"/>
                        </group>
                        <group>
                            <field name="request_id"/>
                            <field name="create_date" string="Date"/>
                        </group>
                    </group>
                    <separator string="Before (JSON)"/>
                    <field name="before_json" readonly="1"/>
                    <separator string="After (JSON)"/>
                    <field name="after_json" readonly="1"/>
                    <separator string="Source References"/>
                    <field name="source_refs" readonly="1"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ai_audit_log" model="ir.actions.act_window">
        <field name="name">Audit Logs</field>
        <field name="res_model">account.ai.audit_log</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No audit logs yet.
            </p>
            <p>
                All actions on cases are automatically logged here for compliance.
            </p>
        </field>
    </record>
</odoo>
