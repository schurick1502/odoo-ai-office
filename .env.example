# PostgreSQL
POSTGRES_DB=odoo_ai_office
POSTGRES_USER=odoo
POSTGRES_PASSWORD=              # REQUIRED: set a strong password (min 16 chars)

# Odoo
ODOO_DB=odoo_ai_office
ODOO_ADMIN_PASSWD=              # REQUIRED: set a strong admin password
ODOO_PORT=8069

# AI Office Service
AI_SERVICE_HOST=ai_office_service
AI_SERVICE_PORT=8100
AI_SERVICE_URL=http://ai_office_service:8100
SERVICE_VERSION=latest

# Logging
LOG_LEVEL=INFO                  # DEBUG, INFO, WARNING, ERROR
LOG_FORMAT=json                 # json (production) or console (development)

# DocumentFlow Bridge (MCP)
DOCFLOW_URL=http://localhost:8000
DOCFLOW_USERNAME=admin
DOCFLOW_PASSWORD=                   # REQUIRED for bridge sync
# DOCFLOW_TOKEN=                    # Alternative: pre-existing JWT

# Bridge Sync
BRIDGE_SYNC_INTERVAL=60            # Seconds between sync cycles (daemon mode)
BRIDGE_SYNC_STATUSES=approved      # Comma-separated statuses to sync
BRIDGE_DRY_RUN=false               # Set to true for testing without writes

# Secrets (never commit real values)
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
